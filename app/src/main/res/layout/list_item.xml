<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    cardview:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    cardview:cardBackgroundColor="@color/colorAccent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTanggalTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tanggal Transaksi"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvIdTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Id Transaksi"
            android:layout_below="@id/tvTanggalTransaksi"
            />
        <TextView
            android:id="@+id/tvIdCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Id Customer"
            android:layout_below="@id/tvIdTransaksi"
            />
        <TextView
            android:id="@+id/tvTotalHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Total Harga"
            android:layout_below="@id/tvIdCustomer"
            />
        <TextView
            android:id="@+id/tvIdSepatu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Id Sepatu"
            android:layout_below="@id/tvTotalHarga"
            />
    </RelativeLayout>
    <!--<View-->
    <!--android:background="@color/colorPrimary"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="5dp"/>-->
</android.support.v7.widget.CardView>
